{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS Application",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceRoot}/src/main.ts"
      ],
      // "runtimeArgs": [
      //   "--nolazy",
      //   "-r",
      //   "ts-node/register",
      //   "-r",
      //   "tsconfig-paths/register"
      // ],
      // "program": "${workspaceFolder}/src/main.ts",
      "runtimeArgs": [
        "--nolazy",
        "${workspaceFolder}/node_modules/ts-node-dev/lib/bin.js",
        "--respawn",
        "--transpile-only",
        "--no-notify",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
    }
  ]
}